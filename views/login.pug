include includes/header.pug
block content 
    body(class="bg-gradient")
        .container.top
            .card
                .row
                    .col-md-6
                        .card-body 
                            p.logo #[a(href="/") #[i(class="tim-icons icon-bank mr-2")]  My-Ajoo]
                            h6(class="mb-3 f-w-400") Log into your account
                            form(method="post" class="form-field")
                                .row 
                                    .col-md-12.mb-3
                                        label Email
                                        input(type='email' class="form-control" name='email' required)
                                    .col-md-12.mb-3
                                        label Password
                                        input(type='password' class="form-control" name='password' required)
                                    .col-md-12.text-center
                                        input(type='submit' class='main-btn' value='Login')
                                    p.grey-text.mt-3.ml-1 Forgot Password? #[a(href='/resetpassword' class='btn btn-info reset')  Reset Password]
                                        if error
                                            .alert.alert-danger.alert-dismissible.fade-in.mt-3(role='alert')
                                                button.close(type='button' data-dismiss='alert' aria-label='close')
                                                    span(aria-hidden='true') x
                                                span #{error}
                    .col-md-6.d-none.d-lg-block 
                        img(src='/images/bg5.jpg' class="img-fluid")
    
        include includes/footer.pug