include includes/header.pug
block content
    body
        div(class="wrapper")
                include includes/sidebar.pug
                div(class="main-panel" id="main-panel")
                    include includes/navbar.pug
                    div(class="content")
                        div(class="row")
                            div(class="col-md-12")
                                div(class="card")
                                    div(class="card-header")
                                        h4(class="title mb-3")
                                        h5.text-center These are all debit transactions
                                    .card-body
                                        .row.justify-content-center
                                            .col-md-10
                                                if customerPay.length > 0
                                                    div(class="table-responsive form-field")
                                                        table(class="table table-bordered" id="dataTable")
                                                            thead 
                                                                th Transaction Type
                                                                th Amount
                                                                th Date
                                                                th MOP
                                                            tbody
                                                                each pay in customerPay
                                                                    tr
                                                                        td #{pay.paymentType}
                                                                        td &#x20A6;#{pay.amount.toLocaleString()}
                                                                        td #{pay.paymentDate.toLocaleDateString()}
                                                                        td #{pay.paymentMeans}
                                                else    
                                                    p There are no payments
    



    include includes/footer.pug